<% provide(:title, "Post") %>
<div class="out_frame">
  <div class="inner_frame">
    <table class="post_table">
      <tr>
        <th>いつ</th>
        <td><%= l @post.date %></td>
      </tr>

      <tr>
        <th>いくら</th>
        <td><%= "#{@post.amount.to_s(:delimited)}円" %></td>
      </tr>

      <tr>
        <th>しゅるい</th>
        <% if @post.post_type == "income" %>
          <td>ふえた</td>
        <% elsif  @post.post_type == "outgo"  %>
          <td>へった</td>
        <% end %>
      </tr>

      <tr>
        <th>せつめい</th>
        <td><%= @post.description %></td>
      </tr>
    </table>

    <%= form_with model: @post, url: posts_path, method: :get do |f| %>
      <%= f.hidden_field :kid_id, value: @post.kid_id %>
      <%= f.submit '貯金箱をみる', class: "btn btn_submit_kids" %>
    <% end %>
    <%= button_to 'あたらしく入力する', homes_select_kid_path, method: :get, class: "btn btn_white_kids" %>
  </div>
</div>
