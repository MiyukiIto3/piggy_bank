<% provide(:title, "Edit") %>
<div class="out_frame">
  <div class="inner_frame">
    <h2><%= t('.title', resource: resource.model_name.human) %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_form" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input_form" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input_form" %>
      </div>

      <div class="field">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "input_form" %>
      </div>

      <div class="actions">
        <%= f.submit t('.update'), class: "btn btn_submit" %>
      </div>
    <% end %>
    <div class="linkbtn linkbtn_white">
      <%= link_to t('devise.shared.links.back'), :back %>
    </div>
    <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: "btn btn_delete" %>
  </div>
</div>
